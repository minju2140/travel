// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  password      String
  name          String
  avatarUrl     String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Relations
  couplesAsUser1 Couple[]     @relation("CoupleUser1")
  couplesAsUser2 Couple[]     @relation("CoupleUser2")
  tripMembers   TripMember[]
  expenses      Expense[]
}

model Couple {
  id          String    @id @default(uuid())
  user1Id     String
  user2Id     String
  inviteCode  String    @unique
  createdAt   DateTime  @default(now())
  
  // Relations
  user1       User      @relation("CoupleUser1", fields: [user1Id], references: [id])
  user2       User      @relation("CoupleUser2", fields: [user2Id], references: [id])
  trips       Trip[]
}

model Trip {
  id          String       @id @default(uuid())
  coupleId    String
  title       String
  startDate   DateTime
  endDate     DateTime
  countries   String       // JSON array of countries
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Relations
  couple      Couple       @relation(fields: [coupleId], references: [id])
  members     TripMember[]
  expenses    Expense[]
}

model TripMember {
  id        String   @id @default(uuid())
  tripId    String
  userId    String
  role      String   @default("member")
  
  // Relations
  trip      Trip     @relation(fields: [tripId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  
  @@unique([tripId, userId])
}

model Expense {
  id           String   @id @default(uuid())
  tripId       String
  userId       String
  title        String
  amount       Float
  currency     String
  krwAmount    Float
  exchangeRate Float
  category     String
  payerType    String   // 'self', 'partner', 'shared'
  memo         String?
  images       String?  // JSON array of image URLs
  expenseDate  DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relations
  trip         Trip     @relation(fields: [tripId], references: [id])
  user         User     @relation(fields: [userId], references: [id])
}

model ExchangeRate {
  id          String   @id @default(uuid())
  currency    String   @unique
  rateToKrw   Float
  rateDate    DateTime
  fetchedAt   DateTime @default(now())
}
